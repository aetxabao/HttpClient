<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:id="@+id/LblIntro"
        android:text="@string/lblIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/TxtUrl"
        android:inputType="textUri"
        android:text="@string/txtHttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/BtnSend"
        android:text="@string/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView android:id="@+id/ScrollViewHtml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/LinearLayoutHtml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/TxtHtml"
                android:inputType="textMultiLine"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
